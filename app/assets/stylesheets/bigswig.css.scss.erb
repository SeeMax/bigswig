@import "variables.css.scss" , "mixins.css.scss";

/* =================================== */
/* Clear Fix */

.cf:before,
.cf:after {
    content: " ";
    display: table;
}

.cf:after { clear: both; }
.cf { *zoom: 1; }

/* =================================== */
/* General */

html{
  height: 100%;
}

body {
  color: black;
  font-size:20px;
  letter-spacing:1px;
  line-height:30px;
  font-family: Verdana, Geneva, sans-serif;
  text-align:center;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  min-height: 100%;
  height:100%;
  width:100%;
  position:relative;
}

a {
  text-decoration:none;
  color: Black;
}

h1 {
  color:white;
  font-size:30px;
  line-height:48px;
  margin:0px auto 0px auto;
  text-transform:uppercase;
  font-weight:bold;
  }

h2 {
  color:white;
  text-align:center;
  color:white;
  font-size:18px;
  line-height:26px;
  font-weight:bold;
  text-transform:uppercase;
  letter-spacing:1px;
}

p {
  font-size:18px;
  line-height:30px;
  color:black;
  margin:0 auto;
}

.content {
  width:60%;
  padding:50px 0 50px 0;
  margin:0 auto;
  position:relative;
}

.tag-line {
  height:60px;
  background:$yellow;
  color:white;
  line-height: 60px;
  vertical-align:middle;
  text-align:center;
  font-size:30px;
  font-family: 'Montserrat', sans-serif;
  font-weight: 700;

  sup {
    font-size:70%;
    position:relative;
    top:-10px;
    border-bottom:3px white solid;
  }
}

.page {
  position:relative;
}

.section-title {
  font-weight:700;
  font-size:46px;
  text-transform: uppercase;
  color:white;
  text-align:center;
  font-family: 'Montserrat', sans-serif;
  margin:0px auto 30px auto;
  max-width:270px;
  padding: 20px 45px;
  border: 6px white solid;
}

.tickets-button {
  border:3px black solid;
  background:white;
  padding:8px 20px;
  max-width:180px;
  color:black;
  font-size:17px;
  font-weight:bold;
  text-transform: uppercase;
  -webkit-border-radius: 30px;
  -moz-border-radius: 30px;
  border-radius: 30px;
  position:absolute;
  top:-25px;
  left:0;
  right:0;
  margin: 0 auto;
  @include transition;

  a {
    color:black;
    text-decoration:none;
  }

  &:hover {
    background:black;

    a {
      color:white;
    }
  }
}

.sticky-wrapper {
  background:$lightGrey;
}


/* =================================== */
/* 404 */

.Four0Four {
  background:$yellow;
}

/* =================================== */
/* Home */

.home {
  background-image: url('<%= asset_path("beerpour.jpg") %>');
  height:600px;
  padding: 0;
  padding-bottom:0;
  background-position: left top;
  background-size:cover;
  background-repeat: no-repeat;

  .content {
    padding-top:120px;
  }

  .home-arrow {
    top:90px;
    position:relative;
    margin:0px auto;
    width:65px;
    height:65px;
    -webkit-transform: translateZ(0);
    -webkit-backface-visibility: hidden;
    -webkit-perspective: 1000;
  }
}

/* =================================== */
/* Tour */

.tour {
  background:$yellow;

  h1 {
    margin:60px auto;
  }

  .content {
    -webkit-transform: translateZ(0);
    -webkit-backface-visibility: hidden;
    -webkit-perspective: 1000;
  }
}

.asterisk {
  margin:30px auto;
  font-size:12px;
}


/* =================================== */
/* Breweries */

.breweries-area {
  background:$darkYellow;
  width:100%;
  overflow: hidden;
  padding:20px 0 50px 0;
}

.brewery-container {
  float:left;
  width:33%;
  -webkit-transform: translateZ(0);
  -webkit-backface-visibility: hidden;
  -webkit-perspective: 1000;

  .brewery {
    width:240px;
    margin:0px auto;

    p {
      padding: 10px 0;
      font-size:14px;
      line-height: 22px;
    }
  }

  h2 {
    width:90%;
    margin:0px auto;
  }

  p {
    font-size:16px;
    line-height:26px;
    color:black;
    font-weight:normal;
    width:80%;
  }
}

/* =================================== */
/* Quote */

.travel-quote {
  position: relative;
  background-image: url('<%= asset_path("road.png") %>');
  height: 0;
  padding: 0;
  padding-bottom: 53%;
  background-position: center center;
  background-size: 100%;
  background-repeat: no-repeat;
}

/* =================================== */
/* About */

.about {
  background:white;

  .section-title {
    margin-top:20px;
    color:black;
    border-color: black;
  }

  p {
    margin:50px auto 20px auto;
  }

  h1 {
    color:black;
    margin-bottom:20px;
  }
}

/* =================================== */
/* Woods */


.woods {
  background:$darkBrown;


  .white-bar-box {
    width:100%;
    height:80px;
  }

  .white-bar {
    height:100%;
    width:10px;
    margin:0px auto;
    background:white;
  }

  h1 {
    margin:45px auto;
  }

  h2 {
    margin-bottom:45px;
    line-height:32px;
  }

  a {
    color:$yellow;
  }
}

/* =================================== */
/* Carousel */

.whitecaps-carousel {
  position:relative;
  background-image: url('<%= asset_path("whitecaps.png") %>');
  height:650px;
  padding: 0;
  padding-bottom:0;
  background-position: center top;
  background-size:cover;
  background-repeat: no-repeat;
}

#white-cap-image {
  padding-top:150px;
}

.yellow-bar {
  height:20px;
  background:$yellow;
}


/* =================================== */
/* Tickets */


.tickets-headline {
  background-image: url('<%= asset_path("beerboard.jpg") %>');
  height:750px;
  padding: 0;
  padding-bottom:0;
  background-position: center top;
  background-size:cover;
  background-repeat: no-repeat;

  img {
    padding-top:70px;
    margin:0px auto 0 auto;
    max-width:811px;
    width:100%;
    text-align:center;
  }
}

.tickets-copy {
  background:$yellow;
  color:white;

  .content {
    padding: 100px 0;
  }

  p {
    a {
      border-bottom:2px $darkBrown solid;
      padding-bottom:2px;
    }
  }
}

#ticketdetails {
  background:$yellow;
  text-align:left;
  padding:10px;
}

/* =================================== */
/* Footer */


.footer {
  background: $darkBrown;
  color:white;

  a {
    color:white;
  }
}

.top-button {
  position:absolute;
  top:-26px;
  margin: 0 auto;
  left:0;
  right:0;
}

.footer-image {
  margin:25px 0;
  display:block;
}

.social-icons {
  text-align:center;
  margin-top:25px;

  .icon {
    display:inline-block;
    padding:0 3px;
  }
}

/* =================================== */
/* Responsive 0px - 479px */


@media screen and (min-width: 0px) and (max-width: 479px) {

  .stuck, .sticky-wrapper, .nav-top, .nav-bottom {
    display:none;
  }

  .tag-line {
    font-size:22px;
  }

  h1 {
    font-size:24px;
    line-height:28px;
  }

  .content {
    width:90%;
  }

  .section-title {
    font-size:30px;
    border:3px white solid;
  }

  .about .section-title {
    border:3px black solid;
  }

  .home .home-arrow {
    top:40px;
  }

  .brewery-container {
    float:none;
    width:70%;
    margin:0 auto 100px auto;

    .brewery {
      width:100%;
    }
  }

  .tickets-headline {
    height:650px;

    img {
      padding-top:30px;
    }
  }


  .travel-quote {

    background-image: url('<%= asset_path("road_m.png") %>');
    padding-bottom: 108%;
  }

  .whitecaps-carousel {
    position:relative;
    background-image: url('<%= asset_path("whitecaps.png") %>');
    height: 500px;
    padding: 0;
    padding-bottom:0;
    background-position: center center;
    background-size:500px 500px;
    background-repeat: no-repeat;

    img {
      width:90%;
    }
  }

  .tickets-headline {
    background-image: url('<%= asset_path("beerboard.jpg") %>');
    height:450px;
    padding: 0;
    padding-bottom:0;
    background-position: center top;
    background-size:cover;
    background-repeat: no-repeat;

    img {
      padding-top:20px;
      width:90%;
    }
  }
}

