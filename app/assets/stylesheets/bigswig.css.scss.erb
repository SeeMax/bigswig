@import "variables.css.scss" , "mixins.css.scss";

/* =================================== */
/* Clear Fix */

.cf:before,
.cf:after {
    content: " ";
    display: table;
}

.cf:after { clear: both; }
.cf { *zoom: 1; }

/* =================================== */
/* General */

html{
  height: 100%;
}

body {
  color: black;
  font-size:20px;
  letter-spacing:1px;
  line-height:30px;
  font-family: Verdana, Geneva, sans-serif;
  text-align:center;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  min-height: 100%;
  height:100%;
  width:100%;
  position:relative;
}

a {
  text-decoration:none;
  color: Black;
}

h1 {
  color:white;
  font-size:30px;
  line-height:48px;
  margin:0px auto 0px auto;
  text-transform:uppercase;
  font-weight:bold;
  }

h2 {
  color:white;
  text-align:center;
  color:white;
  font-size:18px;
  line-height:26px;
  font-weight:bold;
  text-transform:uppercase;
  letter-spacing:1px;
}

p {
  font-size:18px;
  line-height:30px;
  color:black;
  margin:0 auto;
}

.content {
  width:60%;
  padding:50px 0 50px 0;
  margin:0 auto;
  position:relative;
}

.tag-line {
  height:60px;
  background:$yellow;
  color:white;
  line-height: 60px;
  vertical-align:middle;
  text-align:center;
  font-size:30px;
  font-family: 'Montserrat', sans-serif;
  font-weight: 700;

  sup {
    font-size:70%;
    position:relative;
    top:-10px;
    border-bottom:3px white solid;
  }
}

.page {
  position:relative;
}

.section-title {
  font-weight:700;
  font-size:46px;
  text-transform: uppercase;
  color:white;
  text-align:center;
  font-family: 'Montserrat', sans-serif;
  margin:0px auto 30px auto;
  max-width:270px;
  padding: 20px 45px;
  border: 6px white solid;
}

.tickets-button {
  border:3px black solid;
  background:white;
  padding:8px 20px;
  max-width:180px;
  color:black;
  font-size:17px;
  font-weight:bold;
  text-transform: uppercase;
  -webkit-border-radius: 30px;
  -moz-border-radius: 30px;
  border-radius: 30px;
  position:absolute;
  top:-25px;
  left:0;
  right:0;
  margin: 0 auto;
  @include transition;

  a {
    color:black;
    text-decoration:none;
  }

  &:hover {
    background:black;

    a {
      color:white;
    }
  }
}


/* =================================== */
/* Sections */

.home {
  background-image: url('<%= asset_path("beerpour.jpg") %>');
  height: 0;
  padding: 0;
  padding-bottom: 48%;
  background-position: center center;
  background-size: 100%;
  background-repeat: no-repeat;

  .content {
    padding-top:10%;
  }

  .home-arrow {
    top:90px;
    position:relative;
    margin:0px auto;
    width:65px;
    height:65px;
  }
}

.tour {
  background:$yellow;

  h1 {
    margin:60px auto;
  }
}

.asterisk {
  margin:30px auto;
  font-size:12px;
}

.breweries-area {
  background:$darkYellow;
  width:100%;
  overflow: hidden;
  padding:100px 0 300px 0;
}

.brewery-container {
  float:left;
  width:33%;

  .brewery {
    width:240px;
    margin:0px auto;
  }

  h2 {
    width:90%;
    margin:0px auto;
  }

  p {
    font-size:16px;
    line-height:26px;
    color:black;
    font-weight:normal;
    width:80%;
  }
}

.travel-quote {
  position:relative;

  img {
    width:100%;
    display: block;
  }
}

.about {
  background:white;

  .section-title {
    margin-top:20px;
    color:black;
    border-color: black;
  }

  p {
    margin:50px auto 20px auto;
  }

  h1 {
    color:black;
    margin-bottom:20px;
  }
}

.woods {
  background:$darkBrown;


  .white-bar-box {
    width:100%;
    height:80px;
  }

  .white-bar {
    height:100%;
    width:10px;
    margin:0px auto;
    background:white;
  }

  h1 {
    margin:45px auto;
  }

  h2 {
    margin-bottom:45px;
    line-height:32px;
  }

  a {
    color:$yellow;
  }
}

.whitecaps-carousel {
  position:relative;
  background-image: url('<%= asset_path("whitecaps.png") %>');
  height: 0;
  padding: 0;
  padding-bottom: 41%;
  background-position: center center;
  background-size: 100%;
  background-repeat: no-repeat;
}

#white-cap-image {
  padding-top:7%;
}

.yellow-bar {
  height:20px;
  background:$yellow;
}

.tickets-headline {
  background-image: url('<%= asset_path("beerboard.jpg") %>');
  height: 0;
  padding: 0;
  padding-bottom: 46%;
  background-position: center center;
  background-size: 100%;
  background-repeat: no-repeat;

  img {
    margin:50px auto 0 auto;
    max-width:811px;
    text-align:center;
  }
}

.tickets-copy {
  background:$yellow;
  color:white;

  .content {
    padding: 100px 0;
  }
}

.footer {
  background: $darkBrown;
  color:white;

  a {
    color:white;
  }
}

.top-button {
  position:absolute;
  top:-26px;
  margin: 0 auto;
  left:0;
  right:0;
}

.footer-image {
  margin:25px 0;
  display:block;
}

.social-icons {
  text-align:center;
  margin-top:25px;

  .icon {
    display:inline-block;
    margin:0 3px;
  }
}

