@import "variables.css.scss" , "mixins.css.scss";

/* =================================== */
/* Clear Fix */

.cf:before,
.cf:after {
    content: " ";
    display: table;
}

.cf:after { clear: both; }
.cf { *zoom: 1; }

/* =================================== */
/* General */

html{
  height: 100%;
}

body {
  color: Black;
  font-size:20px;
  letter-spacing:1px;
  line-height:30px;
  font-family: Verdana, Geneva, sans-serif;
  font-weight:bold;
  text-align:center;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  min-height: 100%;
  height:100%;
  width:100%;
  position:relative;
}

a {
  text-decoration:none;
  color: Black;
}

h1 {
  color:$mediumblue;
  font-size:47px;
  letter-spacing:10px;
  line-height:60px;
  font-family: 'Montserrat', sans-serif;
  margin:0px auto 0px auto;
  text-transform:uppercase;
  }

h2 {
  color:white;
  font-family: Verdana, Geneva, sans-serif;
  text-align:center;
  color:white;
  font-size:30px;
  line-height:50px;
  font-weight:700;
  text-transform:uppercase;
  letter-spacing:1px;
}

p {
  font-size:18px;
  line-height:30px;
  color:black;
  margin:10px auto 0 auto;
  font-family: Verdana, Geneva, sans-serif;
}

.content {
  width:60%;
  padding:50px 0 150px 0;
  margin:0 auto;
  position:relative;
}

.tag-line {
  height:90px;
  background:$yellow;
  color:white;
  line-height: 90px;
  vertical-align:middle;
  text-align:center;
  font-size:30px;
  font-family: 'Montserrat', sans-serif;
  font-weight: 700;

  sup {
    font-size:70%;
    position:relative;
    top:-10px;
    border-bottom:3px white solid;
  }
}

.page {
  position:relative;
}

.section-title {
  margin:0px auto 30px auto;
  max-width:270px;
  text-align:center;
  font-family: 'Montserrat', sans-serif;
  padding: 25px 45px;
  text-transform: uppercase;
  color:white;
  border: 6px white solid;
  font-weight:700;
  font-size:46px;
}

.tickets-button {
  border:3px black solid;
  background:white;
  padding:8px 20px;
  max-width:200px;
  color:black;
  font-size:17px;
  text-transform: uppercase;
  -webkit-border-radius: 30px;
  -moz-border-radius: 30px;
  border-radius: 30px;
  position:absolute;
  top:-25px;
  left:0;
  right:0;
  margin: 0 auto;
  @include transition;

  a {
    color:black;
    text-decoration:none;
  }

  &:hover {
    background:black;

    a {
      color:white;
    }
  }
}


/* =================================== */
/* Sections */

.home {
  background-image: url('<%= asset_path("beerpour.jpg") %>');
  height: 0;
  padding: 0;
  padding-bottom: 48%;
  background-position: center center;
  background-size: 100%;
  background-repeat: no-repeat;

  .content {
    padding-top:10%;
  }

  p {
    text-align:center;
    color:white;
    font-size:30px;
    line-height:50px;
    font-weight:700;
    text-transform:uppercase;
    letter-spacing:1px;
  }
}

.tour {
  background:$yellow;

  .content {

  }

  p {
    color:white;
  }
}

.breweries-area {
  width:100%;
  margin-top:40px;
  overflow: hidden;
}

.brewery {
  float:left;
  width:33%;

  h2 {
    width:90%;
    margin:0px auto;
  }

  p {
    font-size:16px;
    line-height:26px;
    color:black;
    font-weight:normal;
    width:80%;
  }
}


.travel-quote {
  position:relative;

  img {
    width:100%;
    display: block;
  }
}

.about {
  background:white;

  .section-title {
    color:black;
    border-color: black;
  }
}

.whitecaps-carousel {
  position:relative;
  background-image: url('<%= asset_path("whitecaps.jpg") %>');
  height: 0;
  padding: 0;
  padding-bottom: 39%;
  background-position: center center;
  background-size: 100%;
  background-repeat: no-repeat;
}

.yellow-bar {
  height:20px;
  background:$yellow;
}

.tickets-headline {
  background-image: url('<%= asset_path("beerboard.jpg") %>');
  height: 0;
  padding: 0;
  padding-bottom: 66%;
  background-position: center center;
  background-size: 100%;
  background-repeat: no-repeat;
}

.tickets-copy {
  background:$yellow;
  color:white;
}

